# Environment variables example file
# Copy this to .env and modify as needed

# PostgreSQL Database Configuration
# For local development:
DATABASE_URL=postgresql://cometuser:cometpass123@localhost:5432/cometlab

# For Docker, use the service name instead of localhost:
# DATABASE_URL=postgresql://cometuser:cometpass123@db:5432/cometlab

# Upload Directory
UPLOAD_DIR=uploads

# Frontend Origin (CORS)
FRONTEND_ORIGIN=http://localhost:5173

# Propagation Days for Orbit Calculation
SAMPLE_PROPAGATION_DAYS=365

# JWT Secret Key - CHANGE THIS IN PRODUCTION!
# Generate with: openssl rand -hex 32
SECRET_KEY=your-secret-key-change-in-production-please-use-strong-random-key-here
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=43200

# Frontend API URL (used during build)
VITE_API_URL=http://localhost:8000
